{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "types": ["node", "express"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  